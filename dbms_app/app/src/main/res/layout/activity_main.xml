<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createAccScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:scrollbars="vertical"
    android:scrollbarSize="0dp"
    android:overScrollMode="ifContentScrolls">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/clickTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="70dp"
                android:gravity="center"
                android:text="@string/click_to_add_image"
                android:textAlignment="center"
                android:textColor="@color/dark_purple"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dashline"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/click_to_add_image">

            </ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/linearlayoutborder"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="@string/name"
                    android:textColor="@color/dark_purple"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/nameImage"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:src="@drawable/ic_account_circle"
                        android:contentDescription="@string/name"/>

                    <EditText
                        android:id="@+id/nameEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:layout_weight="3"
                        android:layout_marginEnd="6dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/dark_purple"
                        android:autofillHints="@string/name"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/usrNameLayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/linearlayoutborder"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="@string/username"
                    android:textColor="@color/dark_purple"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/uNameImage"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:src="@drawable/ic_account_circle"
                        android:contentDescription="@string/password"/>

                    <EditText
                        android:id="@+id/uNameEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:layout_weight="3"
                        android:layout_marginEnd="6dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/dark_purple"
                        android:autofillHints="@string/password"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/passLayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/linearlayoutborder"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="@string/password"
                    android:textColor="@color/dark_purple"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp">

                    <ImageView
                        android:id="@+id/passImage"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:src="@drawable/ic_password_lock"
                        android:contentDescription="@string/password"/>

                    <EditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:layout_weight="3"
                        android:layout_marginEnd="6dp"
                        android:inputType="textPassword"
                        android:textColor="@color/dark_purple"
                        android:autofillHints="@string/password"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/classLayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/linearlayoutborder"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="CLASS"
                    android:textColor="@color/dark_purple"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/classImage"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="5dp"
                        tools:srcCompat="@tools:sample/avatars"
                        android:contentDescription="@string/enter_class"/>

                    <EditText
                        android:id="@+id/classEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:layout_weight="3"
                        android:layout_marginEnd="6dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/dark_purple"
                        android:autofillHints="@string/enter_class"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/linearlayoutborder"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="@string/address"
                    android:textColor="@color/dark_purple"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/addrImage"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:src="@drawable/ic_address"
                        android:contentDescription="@string/address"/>

                    <EditText
                        android:id="@+id/addrEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:layout_weight="3"
                        android:layout_marginEnd="6dp"
                        android:inputType="textPostalAddress"
                        android:textColor="@color/dark_purple"
                        android:autofillHints="@string/address"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/udiLayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/linearlayoutborder"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="@string/uid"
                    android:textColor="@color/dark_purple"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/uidImage"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="5dp"
                        tools:srcCompat="@tools:sample/avatars"
                        android:contentDescription="@string/enter_uid"/>

                    <EditText
                        android:id="@+id/uidEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:layout_weight="3"
                        android:layout_marginEnd="6dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/dark_purple"
                        android:autofillHints="@string/enter_uid"/>

                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/dark_purple"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/submit"
                    android:id="@+id/submit"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="50dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>